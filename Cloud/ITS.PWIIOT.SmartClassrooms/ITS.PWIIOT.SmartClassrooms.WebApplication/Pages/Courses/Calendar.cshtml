@page "{courseId}"
@model ITS.PWIIOT.SmartClassrooms.WebApplication.Pages.Course.CalendarModel
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="~/fontawesome/css/all.css" rel='stylesheet' />
<link href="~/fullcalendar/main.css" rel="stylesheet" />
<link href="~/fontawesome/css/all.css" rel="stylesheet" />


<input type="text" id="courseId"  value="@Model.Course.Id" hidden />
<h1 class="text-center mb-2">CORSO: @Model.Course.Name</h1>
